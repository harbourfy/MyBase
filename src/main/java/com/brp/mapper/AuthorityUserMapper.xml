    	#{authName,jdbcType=VARCHAR},#{authDesc,jdbcType=VARCHAR},#{isDelete,jdbcType=INTEGER})
  </insert>
   -->
    
    
    <select id="getAuthorityUserList" resultMap="BaseResultMap" parameterType="com.brp.util.query.AuthorityUserQuery" >
         select 
         <include refid="Base_Column_List" />
         from authority_user
         where is_delete = 0
         <trim prefix=" " suffix="" suffixOverrides="" >
		     <if test="authId != null and authId != ''" >
		       and auth_id =  #{authId}
		      </if>
		      <if test="companyId != null and companyId != ''" >
		       and company_id =  #{companyId}
		      </if>
		      <if test="userId != null and userId != ''" >
		       and user_id =  #{userId}
		      </if>
		 </trim>
         
    </select>
     <update id="cancelAuthority" parameterType="java.lang.String">
		update authority_user set is_delete = 0 where id in(${idList})
		 
	</update>
</mapper>